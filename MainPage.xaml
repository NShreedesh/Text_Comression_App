<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TextCompressionApp.MainPage">

    <VerticalStackLayout HorizontalOptions="Center"
                         VerticalOptions="Center">
        <HorizontalStackLayout HorizontalOptions="Center"
                               Spacing="10">
            <Label x:Name="infoLabel"/>
            <ActivityIndicator x:Name="activityIndicator"
                           IsRunning="False"/>
        </HorizontalStackLayout>
        <Button Text="Start Huffman Encoding Selecting the file..."
                Clicked="SelectFileClicked"/>
        <Label x:Name="encodedTimeLabel"/>
        <Label x:Name="originalFileSizeLabel"/>
        <Label x:Name="encodedFileSizeLabel"/>
    </VerticalStackLayout>

</ContentPage>
